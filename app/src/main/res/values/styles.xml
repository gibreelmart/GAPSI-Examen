<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="SwipeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?listPreferredItemHeight</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_margin_Zero</item>
        <item name="android:paddingLeft">@dimen/activity_margin_Zero</item>
        <item name="android:paddingRight">@dimen/activity_margin_Zero</item>
        <item name="android:paddingTop">@dimen/activity_margin_Zero</item>
        <item name="android:minHeight">?listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>